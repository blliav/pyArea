<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Area Plan Views" 
        Width="480" Height="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="#F5F5F5">
    
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Instructions + optional Area Scheme selector -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Select the Area Plan views to process:" 
                       FontSize="14"
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="combo_areascheme" 
                      Height="30" 
                      FontSize="13"
                      Margin="0,0,0,0"
                      Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Area Plan Views List -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="3"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
                <StackPanel x:Name="panel_views" Background="White"/>
            </ScrollViewer>
        </Border>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btn_select_all" 
                    Grid.Column="0"
                    Content="Select All" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="btn_ok" 
                    Grid.Column="2"
                    Content="OK" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            
            <Button x:Name="btn_cancel" 
                    Grid.Column="3"
                    Content="Cancel" 
                    Width="100" 
                    Height="30"
                    IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
