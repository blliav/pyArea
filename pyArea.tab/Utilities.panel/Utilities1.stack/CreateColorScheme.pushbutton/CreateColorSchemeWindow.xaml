<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create/Update Area Color Scheme"
        Width="450" Height="400"
        MinWidth="450" MinHeight="400"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        HorizontalContentAlignment="Center">
    <DockPanel Margin="15">
        <StackPanel DockPanel.Dock="Top">
            <!-- Area Scheme Selection -->
            <Label FontWeight="Bold" Padding="0,0,0,5">Select Area Scheme:</Label>
            <ComboBox x:Name="area_scheme_cb"
                      Height="30"
                      FontSize="14"
                      VerticalContentAlignment="Center"
                      Margin="0,0,0,15"
                      SelectionChanged="area_scheme_changed"/>
            
            <!-- Municipality Selection -->
            <Label FontWeight="Bold" Padding="0,0,0,5">Select Municipality:</Label>
            <ComboBox x:Name="municipality_cb"
                      Height="30"
                      FontSize="14"
                      VerticalContentAlignment="Center"
                      Margin="0,0,0,15"/>
            
            <!-- Parameter Selection -->
            <Label FontWeight="Bold" Padding="0,0,0,5">Select Area Parameter:</Label>
            <ComboBox x:Name="parameter_cb"
                      Height="30"
                      FontSize="14"
                      VerticalContentAlignment="Center"
                      Margin="0,0,0,15"
                      SelectionChanged="parameter_changed"/>
            
            <!-- Color Scheme Name -->
            <Label FontWeight="Bold" Padding="0,0,0,5">Color Scheme Name (New or Existing):</Label>
            <ComboBox x:Name="scheme_name_cb"
                      Height="30"
                      IsEditable="True"
                      FontSize="14"
                      VerticalContentAlignment="Center"
                      StaysOpenOnEdit="True"
                      Margin="0,0,0,20"/>
        </StackPanel>
        
        <!-- Action Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="cancel_btn"
                    Click="cancel_click"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Content="Cancel"
                    IsCancel="True"/>
            <Button x:Name="create_btn"
                    Click="create_click"
                    Width="100"
                    Height="35"
                    Content="Create/Update"
                    IsDefault="True"/>
        </StackPanel>
        
        <Grid />
    </DockPanel>
</Window>
