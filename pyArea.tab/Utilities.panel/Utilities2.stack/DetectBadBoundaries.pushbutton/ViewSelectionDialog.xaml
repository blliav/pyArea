<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detect Bad Boundaries" 
        Width="460" Height="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="#F5F5F5">
    
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Instructions + optional Area Scheme selector -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Detects areas with invalid or unclosed boundary loops."
                       FontSize="12"
                       Foreground="#666666"
                       Margin="0,0,0,12"
                       TextWrapping="Wrap"/>
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: static label -->
                <TextBlock x:Name="txt_views_header_label"
                           Grid.Column="0"
                           Text="Area Plans to check:" 
                           FontSize="14"
                           FontWeight="Bold"/>

                <!-- Right: selected count -->
                <TextBlock x:Name="txt_views_header_count"
                           Grid.Column="1"
                           FontSize="14"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"/>
            </Grid>
            <ComboBox x:Name="combo_areascheme" 
                       Height="30" 
                       FontSize="13"
                       Margin="0,0,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Area Plan Views List -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="3"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
                <StackPanel x:Name="panel_views" Background="White"/>
            </ScrollViewer>
        </Border>
        
        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btn_select_all" 
                    Grid.Column="0"
                    Content="Select All" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="btn_ok" 
                    Grid.Column="2"
                    Content="Check" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            
            <Button x:Name="btn_cancel" 
                    Grid.Column="3"
                    Content="Cancel" 
                    Width="100" 
                    Height="30"
                    IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
