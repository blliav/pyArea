<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detect and fill holes" 
        Width="480" Height="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        Background="#F5F5F5">
    
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Hole Filling Mode Selection (pricing-plan style cards, no outer frame) -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Mode 1: Donut mode card -->
            <ToggleButton x:Name="btn_mode_donut"
                          Grid.Column="0"
                          Margin="0,0,6,0"
                          Padding="0"
                          IsChecked="True"
                          Background="Transparent"
                          BorderThickness="0">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <!-- Minimal template: render only the content (our inner Border) -->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Style>
                <!-- Inner border gives card rounded frame and color based on IsChecked -->
                <Border x:Name="border_mode_donut"
                        Margin="0"
                        Padding="8"
                        CornerRadius="4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                    <!-- Only change border color on selection -->
                                    <Setter Property="BorderBrush" Value="#0078D7"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <!-- Card layout: icon left, title+radio+description right -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon on left -->
                        <Image x:Name="img_mode_donut_holes"
                               Grid.Column="0"
                               Width="48"
                               Height="48"
                               Stretch="Uniform"
                               Margin="0,4,10,4"/>

                        <!-- Right side: title + radio + description -->
                        <Grid Grid.Column="1" Margin="0,2,0,2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Title -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="Islands Only"
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       Margin="0,0,0,2"/>

                            <!-- Radio indicator on same row, top-right of card area -->
                            <Grid Grid.Row="0" Grid.Column="1"
                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                  Margin="6,0,2,0">
                                <Ellipse Width="14" Height="14"
                                         Stroke="#0078D7" StrokeThickness="1.5" Fill="White"/>
                                <Ellipse Width="8" Height="8">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                    <Setter Property="Fill" Value="#0078D7"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </Grid>

                            <!-- Description under title -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="רק חורים המוקפים בתא שטח רציף"
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#666666"
                                       MaxWidth="190"/>
                        </Grid>
                    </Grid>
                </Border>
            </ToggleButton>

            <!-- Mode 2: All holes card -->
            <ToggleButton x:Name="btn_mode_all"
                          Grid.Column="1"
                          Margin="6,0,0,0"
                          Padding="0"
                          Background="Transparent"
                          BorderThickness="0">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ToggleButton">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Style>
                <!-- Inner border gives card rounded frame and color based on IsChecked -->
                <Border x:Name="border_mode_all"
                        Margin="0"
                        Padding="8"
                        CornerRadius="4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#CCCCCC"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                    <!-- Only change border color on selection -->
                                    <Setter Property="BorderBrush" Value="#0078D7"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <!-- Card layout: icon left, title+radio+description right -->
                    <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                        <!-- Icon on left -->
                        <Image x:Name="img_mode_all_holes"
                               Grid.Column="0"
                               Width="48"
                               Height="48"
                               Stretch="Uniform"
                               Margin="0,4,10,4"/>

                        <!-- Right side: title + radio + description -->
                        <Grid Grid.Column="1" Margin="0,2,0,2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Title -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="All Gaps in View"
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       Margin="0,0,0,2"/>

                            <!-- Radio indicator on same row, top-right of card area -->
                            <Grid Grid.Row="0" Grid.Column="1"
                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                  Margin="6,0,2,0">
                                <Ellipse Width="14" Height="14"
                                         Stroke="#0078D7" StrokeThickness="1.5" Fill="White"/>
                                <Ellipse Width="8" Height="8">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                                    <Setter Property="Fill" Value="#0078D7"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </Grid>

                            <!-- Description under title -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                       Text="כל החללים הכלואים בין שטחים"
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#666666"
                                       MaxWidth="190"/>
                        </Grid>
                    </Grid>
                </Border>
            </ToggleButton>
        </Grid>
        
        <!-- Instructions + optional Area Scheme selector -->
        <StackPanel Grid.Row="1" Margin="0,15,0,10">
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: static label -->
                <TextBlock x:Name="txt_views_header_label"
                           Grid.Column="0"
                           Text="Area Plans to process:" 
                           FontSize="14"
                           FontWeight="Bold"/>

                <!-- Right: selected count -->
                <TextBlock x:Name="txt_views_header_count"
                           Grid.Column="1"
                           FontSize="14"
                           FontWeight="Bold"
                           HorizontalAlignment="Right"/>
            </Grid>
            <ComboBox x:Name="combo_areascheme" 
                       Height="30" 
                       FontSize="13"
                       Margin="0,0,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>
        
        <!-- Area Plan Views List -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="3"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
                <StackPanel x:Name="panel_views" Background="White"/>
            </ScrollViewer>
        </Border>
        
        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btn_select_all" 
                    Grid.Column="0"
                    Content="Select All" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="btn_ok" 
                    Grid.Column="2"
                    Content="OK" 
                    Width="100" 
                    Height="30"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            
            <Button x:Name="btn_cancel" 
                    Grid.Column="3"
                    Content="Cancel" 
                    Width="100" 
                    Height="30"
                    IsCancel="True"/>
        </Grid>
    </Grid>
</Window>
